{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "crons": [
    {
      "name": "renewal-reminders",
      "schedule": "0 */6 * * *",
      "command": "curl -X POST https://${{RAILWAY_PUBLIC_DOMAIN}}/api/renewal/check-reminders -H 'X-API-Key: ${{RENEWAL_API_KEY}}' || curl -X POST https://${{RAILWAY_PUBLIC_DOMAIN}}/api/renewal/check-reminders -H 'X-API-Key: ${{ALERT_INGEST_API_KEY}}'"
    },
    {
      "name": "expired-subscriptions",
      "schedule": "0 0 * * *",
      "command": "curl -X POST https://${{RAILWAY_PUBLIC_DOMAIN}}/api/renewal/check-expired -H 'X-API-Key: ${{RENEWAL_API_KEY}}' || curl -X POST https://${{RAILWAY_PUBLIC_DOMAIN}}/api/renewal/check-expired -H 'X-API-Key: ${{ALERT_INGEST_API_KEY}}'"
    }
  ]
}

