{
    "name": "volspike-backend",
    "version": "1.0.0",
    "description": "VolSpike Node.js Backend with Hono, TypeScript, and Prisma",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "prisma db push --accept-data-loss && node dist/index.js",
        "postinstall": "prisma generate",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma studio",
        "lint": "eslint src --ext .ts",
        "type-check": "tsc --noEmit",
        "seed:test": "tsx scripts/seed-test-users.ts",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:watch": "vitest --watch"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.5",
        "@prisma/client": "^6.18.0",
        "@sendgrid/mail": "^8.1.6",
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "bs58": "^5.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "helmet": "^7.1.0",
        "hono": "^4.10.3",
        "jose": "^5.1.0",
        "next-auth": "^5.0.0-beta.25",
        "otplib": "^12.0.1",
        "pino": "^8.16.0",
        "pino-pretty": "^10.2.0",
        "prisma": "^6.18.0",
        "qrcode": "^1.5.4",
        "siwe": "3.0.0",
        "socket.io": "^4.7.4",
        "speakeasy": "^2.0.0",
        "stripe": "^14.0.0",
        "tweetnacl": "^1.0.3",
        "viem": "^2.38.5",
        "winston": "^3.11.0",
        "ws": "^8.14.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.0",
        "@types/node": "^20.10.0",
        "@types/qrcode": "^1.5.5",
        "@types/speakeasy": "^2.0.10",
        "@types/ws": "^8.5.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@vitest/coverage-istanbul": "^4.0.10",
        "@vitest/coverage-v8": "^4.0.10",
        "@vitest/ui": "^4.0.10",
        "eslint": "^8.54.0",
        "nodemon": "^3.0.0",
        "tsx": "^4.6.0",
        "typescript": "^5.3.2",
        "vitest": "^4.0.10"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
